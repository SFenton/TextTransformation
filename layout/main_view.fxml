<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:controller="gui.application.controller.MainViewController" xmlns:fx="http://javafx.com/fxml">
	<MenuBar>
		<Menu text="File">
			<MenuItem text="Import Binary" onAction="#handleImportAction"/>
		</Menu>
	</MenuBar>
	<GridPane alignment="center" hgap="10" vgap="10">
		<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
		
		<Label text="Citation File:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
		<TextField fx:id="inputFileTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
		<Button text="Browse" onAction="#handleBrowseInputButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
		
		<Label text="Output CSV:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		<TextField fx:id="outputFileTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		<Button text="Browse" onAction="#handleBrowseOutputButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
		
		<Button fx:id="startButton" text="START" onAction="#handleStartButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
	</GridPane>
</VBox>